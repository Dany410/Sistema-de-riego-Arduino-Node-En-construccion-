extends ./layout.jade
block contenido
	.container.remove_float.center-block.text-center
		.row.margen-bottom-row
			.col-lg-4.col-md-3.col-sm-3.col-6.inline.centrarIMG
				img(src='/img/riemon.jpg').col-lg-12.col-md-12.col-sm-12
		.row
			.col-12.col-sm-12.col-md-12.col-lg-12.inline
				form(method='post', action='/actualizarVariablesP')
					p  Nivel de agua
					input#var0(type='text', name='var0' required)
					p  Claridad Minima
					input#var1(type='text', name='var1' required)
					p  Claridad Maxima
					input#var2(type='text', name='var2' required)
					p  Temperatura Minima
					input#var3(type='text', name='var3' required)
					p  Temperatura Maxima
					input#var4(type='text', name='var4' required)
					br
					button#btn(type='submit', name='button', value='#', class='inline btnGuardar centrarIMG col-6')  Actualizar
					a(target="_blank" href="/variablesRiego" class='inline btnGuardar centrarIMG') Ver Valores Actuales

		.row.cloPadin
			.col-12.col-sm-12.col-md-12.col-lg-12.inline
				form(method='post', action='/plantas')
					select(name='planta1', class='inline btnPlantas centrarIMG col-4')
						- for (var i =0; i <= plantas.length - 1; i++)
								option(value='#{plantas[i]}') #{plantas[i]}

					select(name='planta2', class='inline btnPlantas centrarIMG col-4')
						- for (var i =0; i <= plantas.length - 1; i++)
								option(value='#{plantas[i]}') #{plantas[i]}

					select(name='planta3', class='inline btnPlantas centrarIMG col-4')
						- for (var i =0; i <= plantas.length - 1; i++)
								option(value='#{plantas[i]}') #{plantas[i]}
					br
					button#btn(type='submit', name='button', value='#', class='inline btnGuardar centrarIMG col-6')  GRABAR

					a(target="_blank" href="/crearPlanta" class='inline btnGuardar centrarIMG col-6') Crear planta

		.row.cloPadin
			.col-12.col-sm-12.col-md-12.col-lg-12.inline
				p Ordenes directas al Arduino
				div
					form(method='post', action='/regar1')
						button#btn(type='submit', name='button', value='#')  Encender Bomba1
				div
					form(method='post', action='/regar2')
						button#btn(type='submit', name='button', value='#')  Encender Bomba2
				div
					form(method='post', action='/regar3')
						button#btn(type='submit', name='button', value='#')  Encender Bomba3
				div
					form(method='post', action='/luzOnOff')
						button#btn(type='submit', name='button', value='#')  Encender / Apagar Luz
